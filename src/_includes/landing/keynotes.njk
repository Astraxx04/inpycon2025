{% set titles = [
  "Creator, Calibre & Kitty",
  "AI Developer & Autism Advocate",
  "Creator, Calibre & Kitty",
  "AI Developer & Autism Advocate"
] %}

{% set colors = [
  "bg-purple-400",
  "bg-lime-300",
  "bg-purple-400",
  "bg-lime-300"
] %}

<section class="relative bg-white w-full px-20">
    <div class="max-w-7xl mx-auto py-16 px-6">
        <h2 class="text-4xl font-extrabold text-black mb-12">Keynote Speakers</h2>
        <div class="flex flex-col lg:flex-row gap-2">
            {% for i in range(0, 4) %}
                <div class="relative h-48 w-48 flex-shrink-0">
                    <div class="absolute inset-0 transform shadow-md">
                        <div class="w-full h-full {{ colors[i] }} border border-black"></div>
                    </div>
                    <div class="relative z-10 p-4 mt-48 -translate-y-full text-sm text-black font-medium">
                        {{ titles[i] }}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>
